<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
	<Design.PreviewWith>
    	<Border Padding="20">
      	<!-- Add Controls for Previewer Here -->
		  <StackPanel Classes="task_item">
			<Ellipse Width="{StaticResource TaskItemElipceSize}"
					Height="{StaticResource TaskItemElipceSize}" 
					Fill="{DynamicResource TaskItemElipceColor}"/>
			<TextBlock FontSize="20"
						MaxWidth="150"
						MinWidth="90"
						Text="home"/>
			</StackPanel>
    	</Border>
  	</Design.PreviewWith>

	<Style Selector="StackPanel.task_item">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="Spacing" Value="12"/>
		<Setter Property="Margin" Value="18 0"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<Style Selector="TextBlock.task_item">
		<Setter Property="TextAlignment" Value="Center"/>
		<Setter Property="TextTrimming" Value="WordEllipsis"/>
	</Style>

</Styles>
