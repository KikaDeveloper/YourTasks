<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
	<!-- Delete button -->
	<Style Selector="Button.delete_button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Width" Value="{DynamicResource DeleteButtonSize}"/>
        <Setter Property="Height" Value="{DynamicResource DeleteButtonSize}"/>
    </Style>

	<!-- Delete icon -->
    <Style Selector="PathIcon.delete_icon">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="Width" Value="{DynamicResource DeleteIconSize}"/>
        <Setter Property="Height" Value="{DynamicResource DeleteIconSize}"/>
    </Style>

</Styles>
