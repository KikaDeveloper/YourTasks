<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:YourTasks"
             x:Class="YourTasks.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
        <!-- Styles -->
        <StyleInclude Source="/Styles/TabControl.axaml"/>
        <StyleInclude Source="/Styles/TabItem.axaml"/>
        <StyleInclude Source="/Styles/TaskItem.axaml"/>
        <StyleInclude Source="/Styles/Header.axaml"/>
        <StyleInclude Source="/Styles/VisibleSwitcher.axaml"/>
        <StyleInclude Source="/Styles/TaskListBoxItem.axaml"/>
        <StyleInclude Source="/Styles/SubTaskList.axaml"/>
        <StyleInclude Source="/Styles/AddTaskButton.axaml"/>
    </Application.Styles>

    <!-- App resources -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/Base.axaml"/>
                <ResourceInclude Source="/Resources/Theme/LightMode.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
