<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YourTasks.Views.TasksView">
  
	<Grid RowDefinitions="50, *">

		<!-- Header decorator -->
		<Border Grid.Row="0"
				BorderThickness="0 0 0 2"
				BorderBrush="{DynamicResource BorderBrushColor}">

			<!-- Header -->
			<ContentControl Background="{DynamicResource HeaderBackground}"
						VerticalContentAlignment="Center">
				<Grid ColumnDefinitions="22*, 78*">
					
					<!-- Settings -->
					<StackPanel Grid.Column="0"
								Orientation="Horizontal"
								Spacing="30"
								Margin="18 0">
						<!-- Setting button -->
						<Button Background="Transparent">
							<Path Width="25" Height="25"
									VerticalAlignment="Center" 
									Data="{StaticResource SettingIcon}" 
									Fill="{DynamicResource SettingIconColor}"/>
						</Button>

						<!-- Theme mode button -->
						<ToggleSwitch>

						</ToggleSwitch>
					</StackPanel>

					<!-- Description -->
					<Border Grid.Column="1"
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
						<TextBlock Text="Description" FontSize="18"/>
					</Border>

				</Grid>
			</ContentControl>
		</Border>

		<!-- Main space -->
		<DockPanel Grid.Row="1">

			<TabControl TabStripPlacement="Left">

				<TabItem/>
				<TabItem/>

				<TabControl.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="Project"/>
					</DataTemplate>
				</TabControl.ItemTemplate>

				<TabControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel MinWidth="200" 
									Background="{DynamicResource TabItemsPanelBackground}"/>
					</ItemsPanelTemplate>
				</TabControl.ItemsPanel>

				<TabControl.ContentTemplate>
					<DataTemplate>
						<Panel Margin="0" 
								Background="{DynamicResource TabContentPanelBackground}"/>
					</DataTemplate>
				</TabControl.ContentTemplate>

			</TabControl>

		</DockPanel>

	</Grid>
</UserControl>
